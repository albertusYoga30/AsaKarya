<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="13dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_border"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/reward1"/>

        <TextView
            android:id="@+id/text_jumlah_donasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins500"
            android:text="@string/jumlah_donasi"
            android:textColor="@color/color_gray400"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/image_reward"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins500"
            android:text="@string/currency_rupiah"
            android:textColor="@color/color_black100"
            android:textSize="14sp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/image_reward"
            app:layout_constraintTop_toBottomOf="@+id/text_jumlah_donasi" />

        <TextView
            android:id="@+id/text_akan_mendapatkan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins600"
            android:text="@string/text_akan_mendapatkan"
            android:textColor="@color/color_gray400"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/image_reward"
            app:layout_constraintTop_toBottomOf="@id/currency" />

        <TextView
            android:id="@+id/item_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins600"
            android:text="@string/reward"
            android:layout_marginStart="12dp"
            android:textColor="@color/color_black100"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/image_reward"
            app:layout_constraintTop_toBottomOf="@id/text_akan_mendapatkan" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>